    <script>
        $(document).ready(function () {
            // Set the username
            const storedUsername = sessionStorage.getItem("username");
            if (storedUsername) {
                document.getElementById("username").textContent = storedUsername;
            }

            // Hide the subject nav item for non-admin users
            const userRole = sessionStorage.getItem("userrole");
            if (userRole !== "Admin") {
                document.getElementById("SubjectNavItem").style.display = "none";
                document.getElementById("GradeNavItem").style.display = "none";
                document.getElementById("CourseNavItem").style.display = "none";
                document.getElementById("ClassNavItem").style.display = "none";
                document.getElementById("ExamNavItem").style.display = "none";
                document.getElementById("UserNavItem").style.display = "none";
                document.getElementById("AssignCourseStudentNavItem").style.display = "none";
                document.getElementById("StudentExamNavItem").style.display = "none";
                document.getElementById("StudentNavItem").style.display = "none";     
            }

            // Logout functionality
            $("#logoutBtn").on("click", function (e) {
                e.preventDefault();
                sessionStorage.clear(); // Clear session storage
                window.location.href = "/Login/Index";
            });


            // Home functionality
            $("#HomeBtn").on("click", function (e) {
                e.preventDefault();
                window.location.href = "/Home/Index";
            });

        });
    </script>
